{
  "project": {
    "name": "Suppercharge Microsoft Fabric",
    "description": "Microsoft Fabric POC for Casino/Gaming Industry with Medallion Architecture",
    "version": "1.0.0"
  },
  "context": {
    "prp": ".claude/prp.md",
    "architecture": "docs/ARCHITECTURE.md",
    "deployment": "docs/DEPLOYMENT.md"
  },
  "preferences": {
    "language": "python",
    "framework": "pyspark",
    "cloud": "azure",
    "iac": "bicep"
  },
  "conventions": {
    "notebook_format": "databricks",
    "table_naming": {
      "bronze": "bronze_*",
      "silver": "silver_*",
      "gold": "gold_*"
    },
    "lakehouse_naming": {
      "bronze": "lh_bronze",
      "silver": "lh_silver",
      "gold": "lh_gold"
    }
  },
  "compliance": {
    "ctr_threshold": 10000,
    "w2g_slot_threshold": 1200,
    "w2g_other_threshold": 600,
    "sar_structuring_range": [8000, 9999]
  },
  "data_domains": [
    "slot_telemetry",
    "table_games",
    "player_profile",
    "financial_txn",
    "security_events",
    "compliance_filings"
  ]
}
