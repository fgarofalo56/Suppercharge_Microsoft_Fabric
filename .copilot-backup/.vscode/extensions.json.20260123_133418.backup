{
  // ==============================================================================
  // Recommended VS Code Extensions for Microsoft Fabric Casino/Gaming POC
  // ==============================================================================
  // VS Code will prompt to install these when opening the project.
  // See: https://code.visualstudio.com/docs/editor/extension-marketplace
  // ==============================================================================

  "recommendations": [
    // =========================================================================
    // Python Development (Essential)
    // =========================================================================

    // Python language support
    "ms-python.python",

    // Pylance - Fast, feature-rich Python language server
    "ms-python.vscode-pylance",

    // Black formatter for Python
    "ms-python.black-formatter",

    // isort - Import sorting
    "ms-python.isort",

    // Ruff - Fast Python linter
    "charliermarsh.ruff",

    // MyPy type checker
    "ms-python.mypy-type-checker",

    // =========================================================================
    // Jupyter Notebooks (Essential)
    // =========================================================================

    // Jupyter notebook support
    "ms-toolsai.jupyter",

    // Jupyter keyboard shortcuts
    "ms-toolsai.jupyter-keymap",

    // Jupyter output renderers
    "ms-toolsai.jupyter-renderers",

    // Jupyter cell tags
    "ms-toolsai.vscode-jupyter-cell-tags",

    // =========================================================================
    // Azure & Infrastructure (Essential)
    // =========================================================================

    // Azure Tools extension pack
    "ms-vscode.vscode-node-azure-pack",

    // Bicep language support
    "ms-azuretools.vscode-bicep",

    // Azure Functions
    "ms-azuretools.vscode-azurefunctions",

    // Azure Pipelines
    "ms-azure-devops.azure-pipelines",

    // =========================================================================
    // Git & Version Control (Recommended)
    // =========================================================================

    // GitLens - Git supercharged
    "eamodio.gitlens",

    // Git Graph - Visualize git history
    "mhutchie.git-graph",

    // GitHub Pull Requests and Issues
    "github.vscode-pull-request-github",

    // =========================================================================
    // Documentation & Markdown (Recommended)
    // =========================================================================

    // Markdown All in One
    "yzhang.markdown-all-in-one",

    // Mermaid diagram support in markdown
    "bierner.markdown-mermaid",

    // Markdown linting
    "davidanson.vscode-markdownlint",

    // =========================================================================
    // Code Quality & Formatting (Recommended)
    // =========================================================================

    // Prettier - Code formatter
    "esbenp.prettier-vscode",

    // EditorConfig support
    "editorconfig.editorconfig",

    // =========================================================================
    // Data & Config Files (Recommended)
    // =========================================================================

    // YAML support
    "redhat.vscode-yaml",

    // Better JSON support
    "ms-vscode.vscode-json5",

    // TOML support
    "tamasfe.even-better-toml",

    // CSV Rainbow coloring
    "mechatroner.rainbow-csv",

    // =========================================================================
    // Productivity (Optional but Helpful)
    // =========================================================================

    // Code spell checker
    "streetsidesoftware.code-spell-checker",

    // TODO highlighting
    "wayou.vscode-todo-highlight",

    // TODO Tree - View all TODOs
    "gruntfuggly.todo-tree",

    // Live Server for HTML preview
    "ms-vscode.live-server",

    // Path Intellisense
    "christian-kohler.path-intellisense",

    // Bracket colorization (built-in now, but pair highlighter useful)
    "coenraads.bracket-pair-colorizer-2",

    // Better Comments
    "aaron-bond.better-comments",

    // =========================================================================
    // Remote Development (For Dev Containers)
    // =========================================================================

    // Dev Containers extension
    "ms-vscode-remote.remote-containers",

    // WSL support (Windows)
    "ms-vscode-remote.remote-wsl"
  ],

  // Extensions that should NOT be recommended (conflicts or superseded)
  "unwantedRecommendations": [
    // Superseded by Pylance
    "ms-python.jedi",

    // Old Python linting (use Ruff instead)
    "ms-python.pylint",
    "ms-python.flake8",

    // Old formatter (use black-formatter instead)
    "ms-python.autopep8",

    // Deprecated bracket colorizer (built into VS Code now)
    "coenraads.bracket-pair-colorizer"
  ]
}
