# Azure Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# =============================================================================
# Azure Subscription
# =============================================================================
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_TENANT_ID=<your-tenant-id>
AZURE_LOCATION=eastus2

# =============================================================================
# Resource Naming
# =============================================================================
# Environment: dev, staging, prod
ENVIRONMENT=dev

# Project prefix for resource naming (3-10 chars, lowercase alphanumeric)
PROJECT_PREFIX=fabricpoc

# =============================================================================
# Microsoft Fabric Configuration
# =============================================================================
# Fabric capacity SKU: F2, F4, F8, F16, F32, F64, F128, F256, F512, F1024, F2048
FABRIC_CAPACITY_SKU=F64

# Fabric admin email (receives capacity notifications)
FABRIC_ADMIN_EMAIL=<your-email@domain.com>

# =============================================================================
# Microsoft Purview Configuration
# =============================================================================
# Purview account name (must be globally unique)
PURVIEW_ACCOUNT_NAME=<unique-purview-name>

# =============================================================================
# Storage Configuration
# =============================================================================
# Storage account name for ADLS Gen2 landing zone (must be globally unique)
STORAGE_ACCOUNT_NAME=<unique-storage-name>

# =============================================================================
# Key Vault Configuration
# =============================================================================
# Key Vault name (must be globally unique)
KEY_VAULT_NAME=<unique-keyvault-name>

# =============================================================================
# Networking Configuration
# =============================================================================
# Enable private endpoints (true/false)
ENABLE_PRIVATE_ENDPOINTS=false

# Virtual network address space (if private endpoints enabled)
VNET_ADDRESS_SPACE=10.0.0.0/16

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Log Analytics workspace retention in days
LOG_RETENTION_DAYS=30

# =============================================================================
# GitHub Actions (for CI/CD)
# =============================================================================
# These are configured as GitHub secrets, not in .env
# AZURE_CLIENT_ID - Service principal or managed identity client ID
# AZURE_CLIENT_SECRET - Service principal secret (if not using OIDC)

# =============================================================================
# Data Generation Configuration
# =============================================================================
# Number of days of historical data to generate
DATA_GENERATION_DAYS=30

# Number of slot machines in the simulation
SLOT_MACHINE_COUNT=500

# Number of players in the simulation
PLAYER_COUNT=10000

# =============================================================================
# Optional: Existing Resources
# =============================================================================
# If you have existing resources to use, specify their resource IDs here
# EXISTING_LOG_ANALYTICS_ID=
# EXISTING_KEY_VAULT_ID=
# EXISTING_VNET_ID=
