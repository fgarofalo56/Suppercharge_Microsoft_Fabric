{
  "sarif-viewer.connectToGithubCodeScanning": "off",

  // ========================================================================
  // GitHub Copilot Spark, Codespaces, and Git Worktrees Settings
  // ========================================================================

  // Git Worktrees: Exclude sibling worktree directories from search
  "search.useIgnoreFiles": true,

  // Codespaces: Recommended terminal settings
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Codespaces: Port forwarding notifications
  "remote.autoForwardPorts": true,
  "remote.autoForwardPortsSource": "process",

  // Git: Settings that help with worktrees
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.pruneOnFetch": true,
  "git.fetchOnPull": true,

  // Recommended extensions for these workflows
  "recommendations": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github",
    "GitHub.remotehub",
    "GitHub.codespaces",
    "eamodio.gitlens"
  ],

  // ========================================================================
  // GitHub Copilot Performance Optimization
  // ========================================================================
  // Exclude files from Copilot context to reduce embedding load and improve
  // chat performance. Uses workspace-relative patterns.

  "github.copilot.chat.experimental.contextFiles.exclude": {
    // Dependency directories (largest impact)
    "**/node_modules/**": true,
    "**/.pnpm-store/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/vendor/**": true,
    "**/__pycache__/**": true,
    "**/packages/**": true,
    "**/.gradle/**": true,
    "**/target/**": true,

    // Build outputs
    "**/dist/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true,
    "**/bin/**": true,
    "**/obj/**": true,
    "**/artifacts/**": true,
    "**/.cache/**": true,
    "**/.parcel-cache/**": true,
    "**/.turbo/**": true,

    // Lock files
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/composer.lock": true,
    "**/poetry.lock": true,
    "**/Cargo.lock": true,
    "**/go.sum": true,
    "**/packages.lock.json": true,

    // Generated code
    "**/*.generated.*": true,
    "**/__generated__/**": true,
    "**/generated/**": true,
    "**/*.g.cs": true,
    "**/*.pb.go": true,

    // Coverage and test reports
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/htmlcov/**": true,
    "**/.pytest_cache/**": true,
    "**/test-results/**": true,
    "**/TestResults/**": true,

    // Caches
    "**/.eslintcache": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.tox/**": true,
    "**/.hypothesis/**": true,
    "**/*.tsbuildinfo": true,

    // Logs
    "**/*.log": true,
    "**/logs/**": true,

    // Binary and media files
    "**/*.png": true,
    "**/*.jpg": true,
    "**/*.jpeg": true,
    "**/*.gif": true,
    "**/*.ico": true,
    "**/*.webp": true,
    "**/*.svg": true,
    "**/*.woff": true,
    "**/*.woff2": true,
    "**/*.ttf": true,
    "**/*.mp3": true,
    "**/*.mp4": true,
    "**/*.pdf": true,
    "**/*.zip": true,
    "**/*.tar.gz": true,
    "**/*.db": true,
    "**/*.sqlite": true,

    // Minified/bundled code
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/*.bundle.js": true,
    "**/*.chunk.js": true,
    "**/*.map": true,

    // Infrastructure state
    "**/*.tfstate": true,
    "**/.terraform/**": true,

    // Secrets and credentials
    "**/.env": true,
    "**/.env.*": true,
    "**/secrets/**": true,
    "**/credentials/**": true,
    "**/*.pem": true,
    "**/*.key": true,

    // OS files
    "**/.DS_Store": true,
    "**/Thumbs.db": true,

    // IDE directories
    "**/.idea/**": true,
    "**/.vs/**": true,
    "**/.history/**": true,

    // Copilot session files
    "**/.copilot/**": true
  },

  // ========================================================================
  // VS Code Search Exclusions (also helps with Copilot indexing)
  // ========================================================================
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.git": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/*.min.js": true,
    "**/*.min.css": true,
    // Git Worktrees: Exclude sibling worktree directories
    "../*-pr-*/**": true,
    "../*-feature-*/**": true,
    "../*-experiment-*/**": true,
    "../*-hotfix/**": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // Watcher exclusions for performance
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/coverage/**": true,
    "**/.next/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true
  },
  "snyk.advanced.autoSelectOrganization": true
}
