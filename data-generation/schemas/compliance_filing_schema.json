{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Compliance Filing",
  "description": "Schema for regulatory compliance filings (CTR, SAR, W-2G)",
  "type": "object",
  "required": ["filing_id", "filing_type", "filing_timestamp", "amount"],
  "properties": {
    "filing_id": {
      "type": "string",
      "description": "Unique filing identifier"
    },
    "filing_type": {
      "type": "string",
      "enum": ["CTR", "SAR", "W2G"],
      "description": "Type of regulatory filing"
    },
    "filing_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when filing was created"
    },
    "player_id": {
      "type": ["string", "null"],
      "description": "Associated player ID if applicable"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "Transaction amount triggering the filing"
    },
    "transaction_date": {
      "type": "string",
      "format": "date",
      "description": "Date of transaction"
    },
    "gaming_day": {
      "type": "string",
      "format": "date",
      "description": "Casino gaming day (may differ from calendar day)"
    },
    "transaction_type": {
      "type": ["string", "null"],
      "description": "Type of transaction"
    },
    "cage_location": {
      "type": ["string", "null"],
      "description": "Cage location where transaction occurred"
    },
    "cashier_id": {
      "type": ["string", "null"],
      "description": "Cashier who processed transaction"
    },
    "suspicious_activity_type": {
      "type": ["string", "null"],
      "description": "For SAR: type of suspicious activity"
    },
    "narrative": {
      "type": ["string", "null"],
      "description": "For SAR: detailed narrative"
    },
    "game_type": {
      "type": ["string", "null"],
      "description": "For W-2G: type of game"
    },
    "machine_id": {
      "type": ["string", "null"],
      "description": "For W-2G: slot machine ID if applicable"
    },
    "wager_amount": {
      "type": ["number", "null"],
      "description": "For W-2G: original wager amount"
    },
    "filing_status": {
      "type": "string",
      "enum": ["PENDING", "SUBMITTED", "ACCEPTED", "REJECTED"],
      "default": "PENDING",
      "description": "Current status of filing"
    },
    "due_date": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Regulatory due date for filing"
    }
  }
}
