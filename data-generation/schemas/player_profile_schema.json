{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player Profile",
  "description": "Schema for casino player/loyalty member profiles",
  "type": "object",
  "required": ["player_id", "first_name", "last_name", "loyalty_tier"],
  "properties": {
    "player_id": {
      "type": "string",
      "pattern": "^P[0-9]+$",
      "description": "Unique player identifier"
    },
    "first_name": {
      "type": "string",
      "description": "Player's first name"
    },
    "last_name": {
      "type": "string",
      "description": "Player's last name"
    },
    "date_of_birth": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Date of birth (must be 21+)"
    },
    "gender": {
      "type": ["string", "null"],
      "enum": ["M", "F", "O", null],
      "description": "Gender identifier"
    },
    "email": {
      "type": ["string", "null"],
      "format": "email",
      "description": "Email address"
    },
    "phone": {
      "type": ["string", "null"],
      "description": "Phone number"
    },
    "address": {
      "type": ["string", "null"],
      "description": "Street address"
    },
    "city": {
      "type": ["string", "null"],
      "description": "City"
    },
    "state": {
      "type": ["string", "null"],
      "description": "State/Province code"
    },
    "zip_code": {
      "type": ["string", "null"],
      "description": "Postal code"
    },
    "loyalty_tier": {
      "type": "string",
      "enum": ["Bronze", "Silver", "Gold", "Platinum", "Diamond"],
      "description": "Current loyalty tier"
    },
    "enrollment_date": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Date enrolled in loyalty program"
    },
    "marketing_opt_in": {
      "type": "boolean",
      "default": false,
      "description": "Marketing communication preference"
    },
    "ssn_hash": {
      "type": ["string", "null"],
      "description": "SHA-256 hash of SSN (never store raw)"
    }
  }
}
