  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region for deployment"
      }
    },
    "retentionInDays": {
      "type": "int",
      "defaultValue": 90,
      "minValue": 30,
      "maxValue": 730,
      "metadata": {
        "description": "Retention period in days"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": "[parameters('retentionInDays')]",
        "features": {
          "enableLogAccessUsingOnlyResourcePermissions": true
        },
        "workspaceCapping": {
          "dailyQuotaGb": 10
        },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "name": "[format('VMInsights({0})', parameters('name'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "plan": {
        "name": "[format('VMInsights({0})', parameters('name'))]",
        "publisher": "Microsoft",
        "product": "OMSGallery/VMInsights",
        "promotionCode": ""
      },
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[format('{0}/{1}', parameters('name'), 'FabricActivity')]",
      "properties": {
        "category": "Fabric Monitoring",
        "displayName": "Fabric Activity Overview",
        "query": "// Fabric activity overview\nAzureDiagnostics\n| where ResourceProvider == \"MICROSOFT.FABRIC\"\n| summarize Count = count() by OperationName, ResultType, bin(TimeGenerated, 1h)\n| order by TimeGenerated desc\n",
        "version": 2
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[format('{0}/{1}', parameters('name'), 'StorageActivity')]",
      "properties": {
        "category": "Fabric Monitoring",
        "displayName": "Storage Operations",
        "query": "// Storage operations for Fabric data\nStorageBlobLogs\n| where OperationName in (\"PutBlob\", \"GetBlob\", \"DeleteBlob\")\n| summarize Count = count(), TotalBytes = sum(ResponseBodySize) by OperationName, bin(TimeGenerated, 1h)\n| order by TimeGenerated desc\n",
        "version": 2
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[format('{0}/{1}', parameters('name'), 'KeyVaultAccess')]",
      "properties": {
        "category": "Security",
        "displayName": "Key Vault Access Patterns",
        "query": "// Key Vault access audit\nAzureDiagnostics\n| where ResourceProvider == \"MICROSOFT.KEYVAULT\"\n| where OperationName has \"Secret\" or OperationName has \"Key\"\n| summarize Count = count() by OperationName, CallerIPAddress, bin(TimeGenerated, 1h)\n| order by TimeGenerated desc\n",
        "version": 2
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
      ]
    }
  ],
  "outputs": {
    "workspaceId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the Log Analytics workspace"
      },
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('name'))]"
    },
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Log Analytics workspace"
      },
      "value": "[parameters('name')]"
    },
    "workspaceCustomerId": {
      "type": "string",
      "metadata": {
        "description": "The customer ID of the Log Analytics workspace"
      },
      "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', parameters('name')), '2022-10-01').customerId]"
    }
